{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "anyOf": [
    {
      "description": "Config returns the stored configuration state. Returns State",
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "type": "object"
        }
      }
    },
    {
      "description": "Exchange rate returns how many ASK we can get for 1 OFFER",
      "type": "object",
      "required": [
        "exchange_rate"
      ],
      "properties": {
        "exchange_rate": {
          "type": "object"
        }
      }
    },
    {
      "description": "Simulate will try to sell the given number of tokens (denom must be either ask or offer, we trade for the other)",
      "type": "object",
      "required": [
        "simulate"
      ],
      "properties": {
        "simulate": {
          "type": "object",
          "required": [
            "offer"
          ],
          "properties": {
            "offer": {
              "$ref": "#/definitions/Coin"
            }
          }
        }
      }
    },
    {
      "description": "Reflect is used for developer integration tests on the go layer. This will cause the contract to make this query (which goes to the SDK), then return the result to the user. This can be used to test the query handlers full-stack in Go code.\n\nThere are many possible return values here, this will just return the raw bytes, the caller is required to know the proper response type (defined in terra_bindings)",
      "type": "object",
      "required": [
        "reflect"
      ],
      "properties": {
        "reflect": {
          "type": "object",
          "required": [
            "query"
          ],
          "properties": {
            "query": {
              "$ref": "#/definitions/TerraQuery"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "Coin": {
      "type": "object",
      "required": [
        "amount",
        "denom"
      ],
      "properties": {
        "amount": {
          "$ref": "#/definitions/Uint128"
        },
        "denom": {
          "type": "string"
        }
      }
    },
    "OracleQuery": {
      "description": "This contains all queries that can be made to the oracle module",
      "anyOf": [
        {
          "type": "object",
          "required": [
            "exchange_rate"
          ],
          "properties": {
            "exchange_rate": {
              "type": "object",
              "required": [
                "ask",
                "offer"
              ],
              "properties": {
                "ask": {
                  "type": "string"
                },
                "offer": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "exchange_rates"
          ],
          "properties": {
            "exchange_rates": {
              "type": "object",
              "required": [
                "offer"
              ],
              "properties": {
                "offer": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "tobin_tax"
          ],
          "properties": {
            "tobin_tax": {
              "type": "object",
              "required": [
                "denom"
              ],
              "properties": {
                "denom": {
                  "type": "string"
                }
              }
            }
          }
        }
      ]
    },
    "SwapQuery": {
      "description": "This contains all queries that can be made to the swap module",
      "anyOf": [
        {
          "type": "object",
          "required": [
            "simulate"
          ],
          "properties": {
            "simulate": {
              "type": "object",
              "required": [
                "ask",
                "offer"
              ],
              "properties": {
                "ask": {
                  "type": "string"
                },
                "offer": {
                  "$ref": "#/definitions/Coin"
                }
              }
            }
          }
        }
      ]
    },
    "TerraQuery": {
      "description": "TerraQuery is an override of QueryRequest::Custom to access Terra-specific modules",
      "anyOf": [
        {
          "type": "object",
          "required": [
            "swap"
          ],
          "properties": {
            "swap": {
              "$ref": "#/definitions/SwapQuery"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "oracle"
          ],
          "properties": {
            "oracle": {
              "$ref": "#/definitions/OracleQuery"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "treasury"
          ],
          "properties": {
            "treasury": {
              "$ref": "#/definitions/TreasuryQuery"
            }
          }
        }
      ]
    },
    "TreasuryQuery": {
      "description": "This contains all queries that can be made to the treasury module",
      "anyOf": [
        {
          "type": "object",
          "required": [
            "tax_rate"
          ],
          "properties": {
            "tax_rate": {
              "type": "object"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "tax_proceeds"
          ],
          "properties": {
            "tax_proceeds": {
              "type": "object"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "tax_cap"
          ],
          "properties": {
            "tax_cap": {
              "type": "object",
              "required": [
                "denom"
              ],
              "properties": {
                "denom": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "reward_weight"
          ],
          "properties": {
            "reward_weight": {
              "type": "object"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "seigniorage_proceeds"
          ],
          "properties": {
            "seigniorage_proceeds": {
              "type": "object"
            }
          }
        }
      ]
    },
    "Uint128": {
      "type": "string"
    }
  }
}
